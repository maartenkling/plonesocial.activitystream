<div  i18n:domain="plonesocial.activitystream"
      tal:attributes="class string:activityItem ${view/render_type}">

  <div class="activityAvatar">
    <a href=""
       tal:attributes="href view/author_home_url">
      <img tal:replace="structure view/user_portrait" />
    </a>
  </div>

  <div class="activityBody">
    <a href="" class="creator"
       tal:condition="view/Creator"
       tal:content="view/Creator"
       tal:attributes="href view/author_home_url">
      Poster Name
    </a>

    <div class="activityByLine">
      <a href="" class="userid"
         tal:content="string:@${view/userid}"
         tal:attributes="href view/author_home_url">
        Poster Name
      </a>
      <span tal:condition="view/is_status"
            i18n:translate="label_says">says:</span>
      <span tal:condition="view/is_discussion"
            i18n:translate="label_commented_on">commented on</span>
      <span tal:condition="view/is_content"
            i18n:translate="label_created">created</span>
      <a tal:attributes="href view/url;
                         title view/Title"
         tal:content="view/Title">view title</a>
    </div>

    <div class="activityText"
         tal:define="is_content view/is_content;
                     canReview python:view.can_review() and not is_content"
         tal:condition="view/getText">
      <div class="commentActions"
           tal:condition="view/is_discussion"
           i18n:domain="plone.app.discussion">
        <form name="delete"
              action=""
              method="post"
              style="display: inline;"
              tal:condition="canReview"
              tal:attributes="action string:${view/getURL}/@@moderate-delete-comment">
          <input name="form.button.DeleteComment"
                 class="destructive"
                 type="submit"
                 value="Delete"
                 i18n:attributes="value label_delete;"
                 />
        </form>
        <form name=""
              action=""
              method="get"
              style="display: inline;"
              tal:condition="canReview"
              tal:repeat="action reply_dict/actions|nothing"
              tal:attributes="action string:${view/getURL}/@@moderate-publish-comment;
                              name action/id">
          <input type="hidden" name="workflow_action" tal:attributes="value action/id" />
          <input name="form.button.PublishComment"
                 class="context"
                 type="submit"
                 tal:attributes="value action/title"
                 i18n:attributes="value"
                 />
        </form>
      </div>
      <span tal:replace="structure view/getText" />
    </div>

    <div class="activityDate" tal:content="view/date">
      8/23/2001 12:40:44 PM
    </div>
  </div>

  <dl class="debug">
    <dt>id:</dt><dd tal:content="view/context/id"></dd>
    <dt>thread_id:</dt><dd tal:content="view/context/thread_id"></dd>

    <form class="rowlike enableUnloadProtection   kssattr-formname-stream" action="http://localhost:8080/Plone/stream" method="post" enctype="multipart/form-data">
      <div data-fieldname="form.widgets.text" class="field z3cformInlineValidation kssattr-fieldname-form.widgets.text" id="formfield-form-widgets-text">
        <label for="form-widgets-text" class="horizontal">
          What are you doing?
          <span class="required horizontal" title="Required">&nbsp;</span>
        </label>
        <div class="fieldErrorBox"></div>
        <textarea id="form-widgets-text" name="form.widgets.text" class="textarea-widget required text-field"></textarea>
      </div>
      <div data-fieldname="form.widgets.thread" class="field z3cformInlineValidation kssattr-fieldname-form.widgets.thread" id="formfield-form-widgets-thread">
        <label for="form-widgets-thread" class="horizontal">
          status.id from parent
          <span class="required horizontal" title="Required">&nbsp;</span>
        </label>
        <div class="fieldErrorBox"></div>
        <input id="form-widgets-thread" name="thread_id" tal:attributes="value view/context/id" class="text-widget required textline-field hide" value="" type="text">
      </div>
      <div class="formControls">
        <input id="form-buttons-statusupdate" name="form.buttons.statusupdate" class="submit-widget button-field standalone" value="Status Update" type="submit"><input id="form-buttons-cancel" name="form.buttons.cancel" class="submit-widget button-field hide" value="Cancel" type="submit">
      </div>
    </form>

  </dl>

</div>
